@page
@model RegisterModel
@using Utility
@{
    ViewData["Title"] = "Register";
}


    <div class="py-4 my-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-8 offset-2">
                <div class="card">
                    <div class="card-body px-lg-5 pt-2">
                        <form method="post" autocomplete="off" asp-route-returnUrl="@Model.ReturnUrl">
                            <h2 class="col-12 text-success text-center py-4"><strong>Register</strong></h2>
                            <div class="form-row py-2">
                                <div class="col">
                                    <div>
                                        <input type="text" autocomplete="off" asp-for="Input.FirstName" placeholder="First Name" class="form-control" />
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div>
                                        <input type="text" autocomplete="off" asp-for="Input.LastName" placeholder="Last Name" class="form-control" />
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="py-2">
                                <input type="email" autocomplete="off" asp-for="Input.Email" placeholder="Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="py-2">
                                <input type="text" autocomplete="off" asp-for="Input.PhoneNumber" placeholder="Phone Number" class="form-control" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="py-2">
                                <input type="password" autocomplete="off" asp-for="Input.Password" placeholder="password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="py-2">
                                <input type="password" autocomplete="off" asp-for="Input.ConfirmPassword" placeholder="confrim password" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="py-2">
                                <input type="radio" name="rdUserRole" value="@StaticDetails.KitchenRole" /> @StaticDetails.KitchenRole
                                <input type="radio" name="rdUserRole" value="@StaticDetails.ManagerRole" /> @StaticDetails.ManagerRole
                                <input type="radio" name="rdUserRole" value="@StaticDetails.FrontDeskRole" /> @StaticDetails.FrontDeskRole
                            </div>
                            <div class="py-2">
                                <button type="submit" class="btn btn-outline-success form-control">Register</button>
                            </div>
                        </form>
                            <hr />
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <p>
                                    By clicking <em>Register</em> you agree to our <a href ="#" target="_blank"> terms of service</a> 
                                </p>
                                <div class="row">

                                    @foreach (var provider in Model.ExternalLogins)
                                    {<div class="col-6">
                                            @if (provider.Name.ToLower().Contains("facebook"))
                                            {
                                                <button type="submit" class="btn btn-primary facebook-btn form-control" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fab fa-facebook-square"></i> Sign Up with @provider.DisplayName</button>
                                            }
                                            else
                                            {
                                                @if (provider.Name.ToLower().Contains("micro"))
                                                {
                                                    <button type="submit" class="btn btn-secondary microsoft-btn form-control" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fab fa-windows"></i> Sign Up with @provider.DisplayName</button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                                }

                                            }


                                        </div>

                                    }

                                </div>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


























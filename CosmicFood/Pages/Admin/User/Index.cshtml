@page
@model CosmicFood.Pages.Admin.User.IndexModel
@using Utility
@{
}
@if (User.IsInRole(StaticDetails.ManagerRole))
{
    <div class="border backgroundWhite container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">User List</h2>
                <hr />
            </div>
            <div class="col-6 text-right">
                <a asp-page="/Accout/Register" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New User</a>
            </div>
        </div>
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
}
else
{
    <div>
        <h1>Access Denied!</h1>
    </div>
}

@section Scripts{
    <script src="~/js/User.js"></script>">
}
